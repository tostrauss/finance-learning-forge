{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true, // Changed from false
    "forceConsistentCasingInFileNames": true, // Added this line
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false, // Consider enabling this (setting to true) with strict mode for even better type safety
    "noFallthroughCasesInSwitch": false, // Consider enabling this (setting to true)

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
